<!DOCTYPE html>
<html lang="en">
<%- include("../pcpheader",{page_name:"onboarding",section_name:'first-party'}) %>

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<link rel="stylesheet" href="/stylesheets/style.css">
<style>
    ::-webkit-scrollbar-track {
        box-shadow: inset 0 0 6px rgba(0, 0, 0, 0.3);
        -webkit-box-shadow: inset 0 0 6px rgba(0, 0, 0, 0.3);
        background-color: #F5F5F5;
    }

    ::-webkit-scrollbar {
        width: 10px;
        background-color: #F5F5F5;
    }

    ::-webkit-scrollbar-thumb {
        background-color: grey;
    }

    ::-webkit-scrollbar {
        width: 10px;
        background-color: #F5F5F5;
    }

    ::-webkit-scrollbar-thumb {
        background-color: grey;
    }

    th {
        text-align: center;
    }

    .alert {
        margin-bottom: 1px;
        height: 30px;
        line-height: 30px;
        padding: 0px 15px;
        font-weight: bold;
    }

    #prettyprintHead {
        opacity: 0;
        position: absolute;
        z-index: -9999;
        pointer-events: none;
    }

    .segmented-control {
        height: 30px;
        font-size: 11px;
    }

    .row {
        margin-bottom: 5px;
    }

    .loadingText {
        font-size: 20px !important;
    }

    h5 {
        font-weight: bold;
        font-size: 14px;
    }

    span.info {
        font-weight: normal;
        line-height: 2em;
        font-size: 12px;
    }

    .options {
        background: #ddd;
        display: flex;
        flex-flow: column;
        padding-top: 10px;
        padding-bottom: 20px;
    }

    .size {
        font-size: 1.5em;
        margin-bottom: 10px;
        padding: 5px;
        display: flex;
        justify-content: center;
    }

    .options>* {
        width: 100%;
    }

    #statusContainer {
        padding-top: 0%;
    }

    @media screen and (min-width: 768px) {
        #statusContainer {
            padding-top: 10.5%;
        }
    }
</style>

<script defer src="https://cdn.jsdelivr.net/npm/gasparesganga-jquery-loading-overlay@2.1.6/dist/loadingoverlay.min.js">
</script>
<script defer src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/moment.min.js"></script>
<script defer src="//cdnjs.cloudflare.com/ajax/libs/underscore.js/1.5.2/underscore-min.js"></script>
<script defer src="/onboarding/payload.js"></script>
<script defer src="/onboarding/scriptloader.js"></script>
<script defer src="/onboarding/chance.js"></script>

</head>

<body>

    <body>
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h4 class="header">
                        <center>
                            <u>
                                <mark>Customize the First Party Onboarding Experience and click on Save</mark>

                            </u>
                            <div style="margin-top:10px">
                                For more info, check <a
                                    href="https://developer.paypal.com/docs/platforms/seller-onboarding/build-onboarding/"
                                    target="_blank">
                                    here
                                </a>
                            </div>
                        </center>


                    </h4>


                    <button class="btn btn-md btn-save" onclick="save()">Save </button>
                    <br />

                    <div class="options">
                        <div class="row">
                            <div class="col-md-10 col-md-offset-1">
                                <h5>Environment </h5>
                                <select name="environment" class="form-control input-sm" style="color:#319DD4">
                                    <option value="sandbox" selected>Sandbox</option>
                                </select>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-10 col-md-offset-1">
                                <h5>Client ID
                                    <span class="info">
                                        <br />
                                        - If you change this value, please enter Client Secret
                                    </span>

                                </h5>
                                <input type="text" class="form-control input-sm" placeholder="Enter Client Id"
                                    style="color:black" onchange="handleClientIDChange()" name="clientId"
                                    value="AVajOV0VnH8tD0mWYqeWH22uB-DOIWPO5yRzmrqTCOeWx0oopJfeZl6NiL1NAITC3mKiTY1XuAT_mXeh">
                            </div>

                        </div>

                        <div class="row">
                            <div class="col-md-10 col-md-offset-1">
                                <h5>Client Secret
                                    <span class="info">
                                        <br />
                                        - If you change the Client ID, please enter this value
                                    </span>
                                </h5>
                                <input type="password" class="form-control input-sm"
                                    placeholder="Enter Client Secret if Client ID is changed" style="color:black"
                                    name="clientSecret" disabled value="">
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-10 col-md-offset-1">
                                <h5>Partner Merchant ID
                                    <span class="info">
                                        <br />
                                        - To find the merchant ID of your PayPal account, log in to your PayPal account
                                        at paypal.com, click on the Settings icon, click on Business information, and
                                        look for PayPal Merchant ID.
                                    </span>

                                </h5>
                                <input type="text" class="form-control input-sm"
                                    placeholder="Enter PayPal Merchant Id of the partner" style="color:black"
                                    name="partnerMerchantId" value="8KKV5DUPTYP5N">
                            </div>

                        </div>



                        <div class="row">
                            <div class="col-md-10 col-md-offset-1">
                                <h5>Email Address
                                    <span class="info">
                                        <br />
                                        - Seller / Merchant Email Address
                                    </span>

                                </h5>
                                <input type="email" class="form-control input-sm" placeholder="Enter Email Address"
                                    style="color:black" name="emailAddress" value="spp16353@paypal.com">
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-10 col-md-offset-1">
                                <h5>Tracking ID / Nonce
                                    <span class="info">
                                        <br />
                                        - It should be unique per Seller / Merchant for a partner
                                    </span>
                                </h5>
                                <input type="email" class="form-control input-sm"
                                    placeholder="Enter Tracking ID / Nonce" style="color:black" name="trackingId"
                                    value="">
                            </div>
                        </div>

                    </div>

                    <br />

                    <button class="btn btn-md btn-save" onclick="save()">Save </button>

                    <br /><br />


                </div>


                <div class="col-md-6 col-sm-12 col-xs-12" id="statusContainer">

                    <div class="closemsg size" style="display:none">
                        <mark>Close Popup after signing up</mark>
                    </div>

                    <div class="msg size" style="display:none">
                        <mark>Click on Save button to try again</mark>
                    </div>

                    <br />

                    <div id="consoleWindow" class="panel panel-primary" style="width:100%;background-color:black">

                        <%- include("../sourcecode") %>

                        <div class="panel-heading" style="padding-bottom: 20px;">
                            <div>Playground Status
                            </div>
                        </div>

                        <div class="panel-body" style="margin:0px;margin-bottom:10px;width:100%;overflow-y:auto;">
                            <div id="plgStatus" style="color:white;">
                            </div>
                        </div>

                    </div>

                </div>

            </div>

        </div>

        <script>

        </script>

        <script>
            function handleEnvChange() {

                var env = $("[name=environment]").val();
                if (env == "production") {
                    $("[name=clientId]").val('');
                    $("[name=clientSecret]").val('');

                } else {
                    $("[name=clientId]").val(
                        'AVajOV0VnH8tD0mWYqeWH22uB-DOIWPO5yRzmrqTCOeWx0oopJfeZl6NiL1NAITC3mKiTY1XuAT_mXeh');
                    $("[name=clientSecret]").val('');
                }

            }

            function handleClientIDChange() {
                let clientID = $("[name=clientId").val().trim();
                if (clientID === CLIENT_ID) {
                    $("[name=clientSecret").attr("disabled", true);
                    return;
                }
                $("[name=clientSecret").attr("disabled", false);
            }

            window.addEventListener('DOMContentLoaded', function () {
                var trackingId = chance.string({
                    length: 45,
                    casing: 'upper',
                    alpha: true,
                    numeric: true
                });
                $("[name=trackingId").val(trackingId);
                save();
            });
        </script>

    </body>

    <%- include("../footer",{page_name:"onboarding",section_name:'first-party'}) %>

</html>